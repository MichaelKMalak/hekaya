{
  "name": "@hekaya/renderer",
  "version": "0.1.0",
  "description": "HTML renderer for Hekaya screenplay markup with RTL support",
  "license": "MIT",
  "author": "Cairo Indie Filmmakers Club",
  "keywords": [
    "screenplay",
    "arabic",
    "rtl",
    "fountain",
    "renderer",
    "html",
    "hekaya"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelkmalak/hekaya.git",
    "directory": "packages/hekaya-renderer"
  },
  "bugs": {
    "url": "https://github.com/michaelkmalak/hekaya/issues"
  },
  "homepage": "https://github.com/michaelkmalak/hekaya#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hekaya/parser": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.9"
  }
}
